<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e1e1"

    android:orientation="vertical"

    android:padding="16dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/contact_list"
        android:name="io.lattis.hitme.ContactListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        app:stackFromEnd ="true"
        android:layout_marginBottom="50dp"
        tools:context="io.lattis.hitme.ContactListActivity"
        tools:listitem="@layout/contact_list_content" />


    <EditText
        android:id="@+id/messageEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="#858e8e8e"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/sendMessageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right"
        android:background="@drawable/send_selector"
        android:visibility="visible" />


</FrameLayout>